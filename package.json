  "bugs": {
    "url": "https://github.com/lalit2005/linkk/issues"
  },
  "homepage": "https://github.com/lalit2005/linkk#readme",
  "devDependencies": {
    "@types/node": "^17.0.23",
    "np": "^7.6.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "cac": "^6.7.12",
    "chalk": "^5.0.1",
